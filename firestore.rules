rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // 🔐 قاعدة أساسية: السماح بالقراءة والكتابة للجميع (للاختبار فقط)
    // في الإنتاج، يجب تغيير هذا إلى request.auth != null
    match /{document=**} {
      allow read, write: if true;
    }
    
    // 👥 قواعد المستخدمين - السماح بالقراءة والكتابة للجميع
    match /users/{userId} {
      allow read, write: if true;
    }
    
    // 👨‍💼 قواعد الإدارة
    match /admins/{adminId} {
      allow read, write: if true;
    }
    
    // 💬 قواعد الرسائل والدعم الفني
    match /messages/{messageId} {
      allow read, write: if true;
    }
    
    match /conversations/{conversationId} {
      allow read, write: if true;
    }
    
    match /support_messages/{messageId} {
      allow read, write: if true;
    }
    
    match /support_conversations/{conversationId} {
      allow read, write: if true;
    }
    
    // 🔧 قواعد إضافية للخدمات
    match /services/{serviceId} {
      allow read, write: if true;
    }
    
    // 📊 قواعد إضافية للبيانات العامة
    match /public/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // 🔐 قواعد خاصة بالمصادقة
    match /auth/{document=**} {
      allow read, write: if request.auth != null;
    }

    // =========================
    // Organization Referrals System Rules
    // =========================

    // Organization referrals
    match /organization_referrals/{referralId} {
      // أي مستخدم مصادق يمكنه القراءة
      allow read: if request.auth != null;
      // الإنشاء والتحديث والحذف مسموح فقط لمالك المنظمة
      allow create: if request.auth != null 
        && request.auth.uid == request.resource.data.organizationId;
      allow update, delete: if request.auth != null 
        && request.auth.uid == resource.data.organizationId;
    }

    // Player join requests
    match /player_join_requests/{requestId} {
      // القراءة مسموحة للاعب صاحب الطلب أو المنظمة المستهدفة
      allow read: if request.auth != null 
        && (
          request.auth.uid == resource.data.playerId ||
          request.auth.uid == resource.data.organizationId
        );
      // الإنشاء مسموح للاعب فقط
      allow create: if request.auth != null 
        && request.auth.uid == request.resource.data.playerId;
      // التحديث (المعالجة) مسموح للمنظمة فقط
      allow update: if request.auth != null 
        && request.auth.uid == resource.data.organizationId;
    }

    // Join request notifications (for organizations)
    match /join_request_notifications/{notificationId} {
      allow read, update: if request.auth != null 
        && request.auth.uid == resource.data.organizationId;
      allow create: if request.auth != null;
    }

    // Player notifications
    match /player_notifications/{notificationId} {
      allow read, update: if request.auth != null 
        && request.auth.uid == resource.data.playerId;
      allow create: if request.auth != null;
    }
  }
} 